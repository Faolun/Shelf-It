<div class="container">
    <h1>Shelf It</h1>
    <div class="row">
        <div class="col s6 newWhiskey">
            <ul>
                {{#each whiskey}}
                    {{#unless tasted}}
                    {{> whiskey/whiskey-block}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col s6 imbibedWhiskey">
            <ul>
                {{#each whiskey}}
                    {{#if tasted}}
                    <div class="imbibedDiv">
                    {{name}}
                    </div>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col s12">
            <p>enter a new whiskey</p>

            <div class="row">
                <div class="col s12">
                    <form class="create-form">
                        <div class="form-group">
                            <input type="text" id="name" name="name" placeholder="Whiskey Name">
                            <button type="submit" class="waves-effect waves-light btn-small addWhiskey">Shelf It</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>